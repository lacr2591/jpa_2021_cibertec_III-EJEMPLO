<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="jpa_2021_cibertec_III">
	<class>jpa.cibertec.basico.Departamento</class>
	<class>jpa.cibertec.basico.Empleado</class>
	<class>jpa.cibertec.basico.Producto</class>
	<class>jpa.cibertec.basico.Venta</class>
	<class>jpa.cibertec.basico.Cliente</class>
	<properties>
<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bd_jpa_2021_prueba" />
<property name="javax.persistence.jdbc.user" value="root" />
<property name="javax.persistence.jdbc.password" value="" />
<!--    hibernate.hbm2ddl.auto reemplaza ddl  create permite crear tablas y borrar datos    -->
<property name="hibernate.hbm2ddl.auto" value="create" />
<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
<!--  hibernate.show_sql nos permite ver los comanndos sql  -->
<property name="hibernate.show_sql" value="true"/>
<property name="packagesToScan" value="jpa.cibertec.basico" />
</properties>
	</persistence-unit>
</persistence>
